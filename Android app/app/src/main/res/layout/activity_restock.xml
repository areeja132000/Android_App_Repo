<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context="com.example.pages.Restock">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/employee_restock_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RestockItem"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/employee_restock_item" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RestockQty"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/customer_item_qty" />

    <Button
        android:id="@+id/restockBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/employee_restock_btn" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/back" />

</LinearLayout>